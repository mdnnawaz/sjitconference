<div class="container" align="center" style="margin-top:120px;">
  <h4>Sign In</h4>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div >
      <%= f.text_field :username, autofocus: true, placeholder: 'Username', size: 30 %>
    </div>

    <div>
      <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', size: 30 %>
    </div>

    <br>
    <div>
      <%= f.submit "Log in", class: 'button-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>