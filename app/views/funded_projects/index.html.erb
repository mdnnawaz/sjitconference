<div class="container">  
  <p id="notice"><%= notice %></p>

  <h1>Funded Projects</h1>

  <table>
    <thead>
      <tr>
        <th>Project title</th>
        <th>Funding agency</th>
        <th>Sub agency</th>
        <th>Project value</th>
        <th>Date of completion</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @funded_projects.each do |funded_project| %>
        <tr>
          <td><%= funded_project.project_title %></td>
          <td><%= funded_project.funding_agency %></td>
          <td><%= funded_project.sub_agency %></td>
          <td><%= funded_project.project_value %></td>
          <td><%= funded_project.date_of_completion %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= button_to 'New Record', new_funded_project_path, class: 'button-primary', method: 'get' %>
