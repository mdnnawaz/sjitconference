  </div>

  <div class="field">
    <%= f.label :remarks, "Remarks" %>
    <%= f.text_area :remarks, size: '120x30' %>
  </div>

  <div class="actions" align="center">
    <%= f.submit "Submit", class: "button-primary" %>
  </div>
