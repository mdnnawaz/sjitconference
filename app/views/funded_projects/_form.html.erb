  <div class="field">
    <%= f.label :address, "Address"%>
    <%= f.text_area :address, size: '120x30' %>
  </div>

  <div class="field">
    <%= f.label :project_value, "Project Value (In Rs)"  %>
    <%= f.text_field :project_value, size: 120, placeholder: "Project Value" %>
