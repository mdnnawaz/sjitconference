  <div class="field">
    <%= f.label :project_submitted_date, "Project Submitted Date" %>
    <%= f.text_field :project_submitted_date, size: 120, placeholder: "DD/MM/YYYY" %>
  </div>

  <div class="field">
    <%= f.label :sanctioned_amount, "Sanctioned Amount (In Rs)" %>
    <%= f.text_field :sanctioned_amount, size: 120, placeholder: "Sanctioned Amount" %>
